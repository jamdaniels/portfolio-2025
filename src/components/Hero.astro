---
import SocialLinks from "./SocialLinks.astro";
import { Image } from "astro:assets";
import me from "../assets/me.png";
---

<section class="text-center space-y-4">
  <div
    class="w-32 h-32 md:w-44 md:h-44 mx-auto mb-8 rounded-full overflow-hidden border-4 border-white/20 shadow-lg hover:scale-105 transition-all duration-300 hover:-rotate-2"
