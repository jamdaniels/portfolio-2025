    <Image
      src={me}
      alt="Profile"
      class="w-full h-full object-cover"
      loading="eager"
    />
  </div>
  <h1 class="text-3xl md:text-6xl font-bold mb-8">
    Hello, I'm <span class="text-fuchsia-500 font-serif italic">Cem</span> ðŸ‘‹
  </h1>
  <p class="max-w-lg md:max-w-2xl mx-auto text-lg md:text-xl pb-8">
