---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import zenGarden from "../assets/zen_garden.jpg";
import assetTracker from "../assets/asset-tracker.png";
import spendy from "../assets/spendy.jpeg";
---

<Layout>
  <section class="space-y-16">
    <div>
      <h1 class="text-3xl md:text-6xl font-bold text-center pb-4">Projects</h1>
      <p class="text-center text-gray-400">
        Here are some of the projects I've worked on.
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <a href="/projects/zenwrite">
        <div
          class="bg-gray-900 p-6 rounded-lg shadow-md border border-gray-800 aspect-16/9 hover:scale-102 transition-all duration-300 hover:rotate-1 relative overflow-hidden hover:shadow-fuchsia-500/10 hover:shadow-lg"
        >
          <Image
            src={zenGarden}
            alt="ZenWrite Project Screenshot"
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/70 to-transparent"
          >
          </div>
          <div class="flex flex-col justify-end h-full relative z-10">
            <h3 class="text-xl font-bold mb-2">ZenWrite</h3>
            <p class="text-gray-400">
              React, daisyUI, Tailwind CSS, TypeScript
            </p>
          </div>
        </div>
      </a>
      <a href="/projects/asset-tracker">
        <div
          class="bg-gray-900 p-6 rounded-lg shadow-md border border-gray-800 aspect-16/9 hover:scale-102 transition-all duration-300 hover:rotate-1 relative overflow-hidden hover:shadow-fuchsia-500/10 hover:shadow-lg"
        >
          <Image
            src={assetTracker}
            alt="Asset Tracker Project Screenshot"
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/70 to-transparent"
          >
          </div>
          <div class="flex flex-col justify-end h-full relative z-10">
            <h3 class="text-xl font-bold mb-2">Asset Tracker</h3>
            <p class="text-gray-400">React, Tailwind CSS, TypeScript</p>
          </div>
        </div>
      </a>
      <a href="/projects/spendy">
        <div
          class="bg-gray-900 p-6 rounded-lg shadow-md border border-gray-800 aspect-16/9 hover:scale-102 transition-all duration-300 hover:rotate-1 relative overflow-hidden hover:shadow-fuchsia-500/10 hover:shadow-lg"
        >
          <Image
            src={spendy}
            alt="Spendy Project Screenshot"
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/70 to-transparent"
          >
          </div>
          <div class="flex flex-col justify-end h-full relative z-10">
            <h3 class="text-xl font-bold mb-2">Spendy</h3>
            <p class="text-gray-400">React, Tailwind CSS, TypeScript</p>
          </div>
        </div>
      </a>
    </div>
  </section>
</Layout>
