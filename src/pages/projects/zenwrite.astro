---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import zenwrite from "../../assets/zenwrite.png";
---

<Layout>
  <section class="text-center space-y-8">
    <h1 class="text-3xl md:text-6xl font-bold mb-16">ZenWrite</h1>
    <div
        id="project-card"
        class="bg-gray-900 max-w-3xl mx-auto p-6 rounded-lg shadow-md border border-gray-800 aspect-16/9 relative overflow-hidden"
      >
        <Image
          src={zenwrite}
          alt="ZenWrite Project Screenshot"
          class="absolute inset-0 w-full h-full object-cover"
          loading="eager"
        />
    </div>
    <p class="max-w-xl mx-auto">
      ZenWrite is a simple, clean, and beautiful text editor that is designed to
      help you write your thoughts and ideas.
    </p>
  </section>
</Layout>
